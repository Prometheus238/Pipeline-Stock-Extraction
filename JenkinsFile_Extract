pipeline {
    agent {
        docker {
            image 'python:3.10'
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh '''
                    pip install yfinance
                    pip install psycopg2-binary
                '''
            }
        }

        stage('Extract Data') {
            steps {
                sh 'python extract_data.py'
            }
        }
    }

    post {
        success {
            echo 'Job completed successfully'
        }
        failure {
            echo 'Job failed'
        }
    }
}
