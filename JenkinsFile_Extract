pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pip3 install yfinance'
                    sh 'pip3 install json'
                    sh 'pip3 install psycopg2'
                    sh 'pip3 install datetime'
                }
            }
        }

        stage('Extract Data') {
            steps {
                script {
                    sh 'python3 extract_data.py'
                }
            }
        }
    }

    post {
        success {
            echo 'Job completed successfully'
        }
        failure {
            echo 'Job failed'
        }
    }
}
