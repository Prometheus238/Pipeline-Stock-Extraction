pipeline {
    agent any

    stages {
        stage('Install Python & Dependencies') {
            steps {
                sh '''
                    which python3 || sudo apt update && sudo apt install -y python3 python3-pip
                    pip3 install --user yfinance psycopg2-binary
                '''
            }
        }

        stage('Extract Data') {
            steps {
                sh 'python3 extract_data.py'
            }
        }
    }

    post {
        success {
            echo 'Job completed successfully'
        }
        failure {
            echo 'Job failed'
        }
    }
}
